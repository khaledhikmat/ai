{
    "build": {
        "builder": "dockerfile",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "healthcheckPort": 7474,
        "healthcheckTimeout": 300,
        "restartPolicyType": "on_failure",
        "restartPolicyMaxRetries": 3,
        "volumeMounts": {
            "/var/lib/neo4j/data": "neo4j-data",
            "/var/lib/neo4j/logs": "neo4j-logs"
        }
    },
    "env": {
        "NEO4J_AUTH": "neo4j/admin4neo4j",
        "NEO4J_initial_dbms_default__database": "neo4j",
        "NEO4J_server_memory_heap_initial__size": "512m",
        "NEO4J_server_memory_heap_max__size": "1G",
        "NEO4J_server_memory_pagecache_size": "512m",
        "NEO4J_server_config_strict__validation_enabled": "false",
        "NEO4J_dbms_connector_bolt_listen__address": "0.0.0.0:7687",
        "NEO4J_dbms_connector_http_listen__address": "0.0.0.0:7474",
        "NEO4J_dbms_connector_https_listen__address": "0.0.0.0:7473",
        "NEO4J_db_logs_query_enabled": "INFO",
        "NEO4J_db_logs_query_threshold": "0",
        "NEO4J_db_tx_log_rotation_retention_policy": "1 days"
    }
}